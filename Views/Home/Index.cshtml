            <a class="btn btn-primary w-100" asp-controller="Famille" asp-action="Index">Manage Material Families</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-primary w-100" asp-controller="Provenance" asp-action="Index">Manage Provenances</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-primary w-100" asp-controller="Producteur" asp-action="Index">Manage Producers</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-primary w-100" asp-controller="Transport" asp-action="Index">Manage Transports</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-primary w-100" asp-controller="CaracteristiqueEnvironnementale" asp-action="Index">Manage Environmental Characteristics</a>
