@model building_materials.Models.Materiau

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Building Material</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Nom" class="form-label fw-bold">Material Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-box-seam"></i></span>
                                <input asp-for="Nom" class="form-control" placeholder="Enter material name" />
                            </div>
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Origine" class="form-label fw-bold">Material Origin</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                <input asp-for="Origine" class="form-control" placeholder="Enter material origin" />
                            </div>
                            <span asp-validation-for="Origine" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="IdFamille" class="form-label fw-bold">Material Family</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tags"></i></span>
                                <select asp-for="IdFamille" class="form-select" asp-items="ViewBag.IdFamille">
                                    <option value="">-- Select Material Family --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IdProvenance" class="form-label fw-bold">Country of Origin</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-globe"></i></span>
                                <select asp-for="IdProvenance" class="form-select" asp-items="ViewBag.IdProvenance">
                                    <option value="">-- Select Country --</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IdProducteur" class="form-label fw-bold">Manufacturer</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-building"></i></span>
                                <select asp-for="IdProducteur" class="form-select" asp-items="ViewBag.IdProducteur">
                                    <option value="">-- Select Manufacturer --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save Material
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

