@model IEnumerable<building_materials.Models.Materiau>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Building Materials Catalog</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Material
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                <i class="bi bi-box-seam"></i> @Html.DisplayNameFor(model => model.Nom)
                            </th>
                            <th>
                                <i class="bi bi-geo-alt"></i> @Html.DisplayNameFor(model => model.Origine)
                            </th>
                            <th>
                                <i class="bi bi-tags"></i> @Html.DisplayNameFor(model => model.Famille)
                            </th>
                            <th>
                                <i class="bi bi-globe"></i> @Html.DisplayNameFor(model => model.Provenance)
                            </th>
                            <th>
                                <i class="bi bi-building"></i> @Html.DisplayNameFor(model => model.Producteur)
                            </th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                                <td>@Html.DisplayFor(modelItem => item.Origine)</td>
                                <td>@Html.DisplayFor(modelItem => item.Famille.NomFamille)</td>
                                <td>@Html.DisplayFor(modelItem => item.Provenance.Pays)</td>
                                <td>@Html.DisplayFor(modelItem => item.Producteur.LieuProduction)</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdMateriau" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.IdMateriau" class="btn btn-sm btn-info">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdMateriau" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>