@model building_materials.Models.Materiau

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h2 class="mb-0"><i class="bi bi-info-circle"></i> Material Details: @Model.Nom</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8">
                    <dl class="row">
                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-box-seam"></i> @Html.DisplayNameFor(model => model.Nom)
                        </dt>
                        <dd class="col-sm-9 fw-bold fs-5">
                            @Html.DisplayFor(model => model.Nom)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-geo-alt"></i> @Html.DisplayNameFor(model => model.Origine)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Origine)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-tags"></i> @Html.DisplayNameFor(model => model.Famille)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Famille.NomFamille)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-globe"></i> @Html.DisplayNameFor(model => model.Provenance)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Provenance.Pays)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-building"></i> @Html.DisplayNameFor(model => model.Producteur)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Producteur.LieuProduction)
                        </dd>
                    </dl>
                </div>

                <div class="col-lg-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title">Material Information</h5>
                            <p class="card-text">This building material has been cataloged with complete details including its origin, family classification, country of provenance, and manufacturer information.</p>
                        </div>
                    </div>
                </div>
            </div>

            <hr />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.IdMateriau" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.IdMateriau" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
