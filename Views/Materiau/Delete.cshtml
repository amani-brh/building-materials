@model building_materials.Models.Materiau

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Building Material</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4 class="alert-heading">Confirmation Required</h4>
                <p>Are you sure you want to permanently delete this building material? This action cannot be undone.</p>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Material Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-box-seam"></i> @Html.DisplayNameFor(model => model.Nom)
                        </dt>
                        <dd class="col-sm-9 fw-bold">
                            @Html.DisplayFor(model => model.Nom)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-geo-alt"></i> @Html.DisplayNameFor(model => model.Origine)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Origine)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-tags"></i> @Html.DisplayNameFor(model => model.Famille)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Famille.NomFamille)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-globe"></i> @Html.DisplayNameFor(model => model.Provenance)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Provenance.Pays)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            <i class="bi bi-building"></i> @Html.DisplayNameFor(model => model.Producteur)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Producteur.LieuProduction)
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdMateriau" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>