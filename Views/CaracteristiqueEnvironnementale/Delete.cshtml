@model building_materials.Models.CaracteristiqueEnvironnementale

@{
    ViewData["Title"] = "Delete Environmental Data";
}

<div class="container-fluid mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Environmental Impact Data</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h4 class="alert-heading">Confirmation Required</h4>
                <p>Are you sure you want to delete the environmental impact data for <strong>@Html.DisplayFor(model => model.Materiau.Nom)</strong>? This action cannot be undone.</p>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-cloud"></i> Emissions Data</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-6 text-muted">
                                    CO₂ Emissions:
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.EmissionCO2) kg CO₂ eq
                                </dd>

                                <dt class="col-sm-6 text-muted">
                                    Water Pollution:
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.PollutionEau) CTUe
                                </dd>

                                <dt class="col-sm-6 text-muted">
                                    Air Pollution:
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.PollutionAir) kg NMVOC eq
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-water"></i> Water Usage</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-6 text-muted">
                                    Water Consumption:
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.ConsommationEau) m³
                                </dd>

                                <dt class="col-sm-6 text-muted">
                                    Net Freshwater Usage:
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.UtilisationNetteEauDouce) m³
                                </dd>

                                <dt class="col-sm-6 text-muted">
                                    Functional Unit:
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.UniteFonctionnelle)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdCaract" />
                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
