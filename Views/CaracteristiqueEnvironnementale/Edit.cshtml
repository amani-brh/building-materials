@model building_materials.Models.CaracteristiqueEnvironnementale

@{
    ViewData["Title"] = "Edit Environmental Data";
}

<div class="container-fluid mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-pencil"></i> Edit Environmental Impact Data</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="IdCaract" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="IdMateriau" class="form-label fw-bold">Building Material</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-building"></i></span>
                                <select asp-for="IdMateriau" class="form-select" asp-items="ViewBag.IdMateriau"></select>
                            </div>
                            <span asp-validation-for="IdMateriau" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="EmissionCO2" class="form-label fw-bold">CO₂ Emissions</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-cloud"></i></span>
                                <input asp-for="EmissionCO2" class="form-control" />
                                <span class="input-group-text">kg CO₂ eq</span>
                            </div>
                            <span asp-validation-for="EmissionCO2" class="text-danger"></span>
                            <small class="form-text text-muted">Total carbon dioxide equivalent emissions</small>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PollutionEau" class="form-label fw-bold">Water Pollution Impact</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-droplet"></i></span>
                                <input asp-for="PollutionEau" class="form-control" />
                                <span class="input-group-text">CTUe</span>
                            </div>
                            <span asp-validation-for="PollutionEau" class="text-danger"></span>
                            <small class="form-text text-muted">Comparative Toxic Units for ecosystems</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PollutionAir" class="form-label fw-bold">Air Pollution Impact</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-wind"></i></span>
                                <input asp-for="PollutionAir" class="form-control" />
                                <span class="input-group-text">kg NMVOC eq</span>
                            </div>
                            <span asp-validation-for="PollutionAir" class="text-danger"></span>
                            <small class="form-text text-muted">Non-methane volatile organic compounds equivalent</small>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConsommationEau" class="form-label fw-bold">Water Consumption</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-water"></i></span>
                                <input asp-for="ConsommationEau" class="form-control" />
                                <span class="input-group-text">m³</span>
                            </div>
                            <span asp-validation-for="ConsommationEau" class="text-danger"></span>
                            <small class="form-text text-muted">Total water used in production</small>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="UniteFonctionnelle" class="form-label fw-bold">Functional Unit</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-rulers"></i></span>
                                <input asp-for="UniteFonctionnelle" class="form-control" />
                            </div>
                            <span asp-validation-for="UniteFonctionnelle" class="text-danger"></span>
                            <small class="form-text text-muted">Reference unit for environmental impacts</small>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="UtilisationNetteEauDouce" class="form-label fw-bold">Net Freshwater Usage</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-droplet-half"></i></span>
                                <input asp-for="UtilisationNetteEauDouce" class="form-control" />
                                <span class="input-group-text">m³</span>
                            </div>
                            <span asp-validation-for="UtilisationNetteEauDouce" class="text-danger"></span>
                            <small class="form-text text-muted">Net freshwater consumed after recycling</small>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Update Environmental Data
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}