@model building_materials.Models.CaracteristiqueEnvironnementale

@{
    ViewData["Title"] = "Environmental Impact Details";
}

<div class="container-fluid mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h2 class="mb-0"><i class="bi bi-info-circle"></i> Environmental Impact Details</h2>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="alert alert-success">
                        <h4 class="alert-heading"><i class="bi bi-building"></i> Material: @Html.DisplayFor(model => model.Materiau.Nom)</h4>
                        <p>Environmental impact assessment data for this building material based on the functional unit: <strong>@Html.DisplayFor(model => model.UniteFonctionnelle)</strong></p>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-cloud"></i> Emissions & Pollution</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-6 text-muted">
                                    CO₂ Emissions:
                                </dt>
                                <dd class="col-sm-6 fw-bold">
                                    @Html.DisplayFor(model => model.EmissionCO2) kg CO₂ eq
                                </dd>

                                <dt class="col-sm-6 text-muted">
                                    Water Pollution Impact:
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.PollutionEau) CTUe
                                </dd>

                                <dt class="col-sm-6 text-muted">
                                    Air Pollution Impact:
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.PollutionAir) kg NMVOC eq
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-water"></i> Water Resources</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-6 text-muted">
                                    Water Consumption:
                                </dt>
                                <dd class="col-sm-6 fw-bold">
                                    @Html.DisplayFor(model => model.ConsommationEau) m³
                                </dd>

                                <dt class="col-sm-6 text-muted">
                                    Net Freshwater Usage:
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.UtilisationNetteEauDouce) m³
                                </dd>

                                <dt class="col-sm-6 text-muted">
                                    Material Origin:
                                </dt>
                                <dd class="col-sm-6">
                                    @Html.DisplayFor(model => model.Materiau.Origine)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <hr />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.IdCaract" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.IdCaract" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>