@model IEnumerable<building_materials.Models.CaracteristiqueEnvironnementale>

@{
    ViewData["Title"] = "Environmental Impact Data";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Environmental Impact Analysis</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Environmental Data
        </a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-success bg-opacity-25">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-leaf"></i> Material Environmental Characteristics</h5>
                <small class="text-muted">Sustainability metrics for building materials</small>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                <i class="bi bi-building"></i> @Html.DisplayNameFor(model => model.Materiau)
                            </th>
                            <th>
                                <i class="bi bi-cloud"></i> Changement Climatique
                                <small class="text-muted">(kg CO₂ eq)</small>
                            </th>
                            <th>
                                <i class="bi bi-droplet"></i> @Html.DisplayNameFor(model => model.PollutionEau)
                                <small class="text-muted">(m³)</small>
                            </th>
                            <th>
                                <i class="bi bi-wind"></i> @Html.DisplayNameFor(model => model.PollutionAir)
                                <small class="text-muted">(m³)</small>
                            </th>
                            <th>
                                <i class="bi bi-water"></i> @Html.DisplayNameFor(model => model.ConsommationEau)
                                <small class="text-muted">(m³)</small>
                            </th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">
                                    @Html.DisplayFor(modelItem => item.Materiau.Nom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmissionCO2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PollutionEau)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PollutionAir)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ConsommationEau)
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdCaract" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.IdCaract" class="btn btn-sm btn-info">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdCaract" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>