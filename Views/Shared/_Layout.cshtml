<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - building_materials</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Roboto:wght@500;700;900&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">

    <!-- Footer Fixed Bottom Styles -->
    <style>
        html {
            position: relative;
            min-height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin-bottom: 0;
        }

        .content-wrapper {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
            width: 100%;
        }

        .footer-contact-info p {
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
        }

        .footer-contact-info i {
            width: 1.5rem;
            text-align: center;
            margin-right: 0.5rem;
        }

        .footer-products a {
            display: block;
            padding: 0.4rem 0;
            transition: all 0.3s ease;
        }

            .footer-products a:hover {
                transform: translateX(5px);
            }

        .copyright {
            padding: 1.2rem 0;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
    </style>
</head>
<body>
<header>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0 wow fadeIn shadow-sm" data-wow-delay="0.1s">
        <div class="container">
            <a href="/" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
                <h1 class="m-0 text-primary"><i class="fa fa-hard-hat me-3"></i>EcoFootprint Building Materials</h1>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a href="/" class="nav-item nav-link @(Context.Request.Path == "/" ? "active" : "")">Home</a>
                    <a href="/#about" class="nav-item nav-link">About</a>
                    <a href="/#service" class="nav-item nav-link">Services</a>
                    <a href="/#team" class="nav-item nav-link">Team</a>

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Resources</a>
                        <div class="dropdown-menu rounded-0 rounded-bottom border-0 shadow m-0">
                            <a href="@Url.Action("Index", "FacteurTransport")" class="dropdown-item py-2"><i class="fa fa-truck-loading text-primary me-2"></i>Transport Factors</a>
                            <a href="@Url.Action("Index", "Materiau")" class="dropdown-item py-2"><i class="fa fa-clipboard-list text-primary me-2"></i>Materials</a>
                            <a href="@Url.Action("Index", "Famille")" class="dropdown-item py-2"><i class="fa fa-sitemap text-primary me-2"></i>Material Families</a>
                            <a href="@Url.Action("Index", "Provenance")" class="dropdown-item py-2"><i class="fa fa-globe-americas text-primary me-2"></i>Provenances</a>
                            <a href="@Url.Action("Index", "Producteur")" class="dropdown-item py-2"><i class="fa fa-hard-hat text-primary me-2"></i>Producers</a>
                            <a href="@Url.Action("Index", "Transport")" class="dropdown-item py-2"><i class="fa fa-truck-moving text-primary me-2"></i>Transports</a>
                            <a href="@Url.Action("Index", "CaracteristiqueEnvironnementale")" class="dropdown-item py-2"><i class="fa fa-seedling text-primary me-2"></i>Environmental Characteristics</a>
                            <a href="@Url.Action("Index", "MaterialType")" class="dropdown-item py-2"><i class="fa fa-hammer text-primary me-2"></i>Material Types</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
</header>

    <div class="content-wrapper">
        <div class="container" style="padding-bottom: 2rem; min-height : 100vh">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-light footer wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-4">
                <div class="row g-5">
                    <div class="col-lg-4 col-md-6">
                        <h5 class="text-light mb-4">Get In Touch</h5>
                        <div class="footer-contact-info">
                            <p><i class="fa fa-map-marker-alt"></i>Cité El Khadhra, Tunis, Tunisia</p>
                            <p><i class="fa fa-phone-alt"></i>+216 99 319 097</p>
                            <p><i class="fa fa-envelope"></i>amani.barhoumi@etudiant-enit.utm.tn</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <h5 class="text-light mb-4">Our Products</h5>
                        <div class="footer-products">
                            <a class="btn btn-link" href="#">Cement & Concrete</a>
                            <a class="btn btn-link" href="#">Steel & Iron</a>
                            <a class="btn btn-link" href="#">Bricks & Blocks</a>
                            <a class="btn btn-link" href="#">Wood & Timber</a>
                            <a class="btn btn-link" href="#">Tools & Equipment</a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <h5 class="text-light mb-4">About EcoFootprint</h5>
                        <p>We provide sustainable building materials with detailed environmental impact tracking to help construction projects reduce their carbon footprint.</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-square btn-outline-light rounded-circle me-2" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-square btn-outline-light rounded-circle me-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                            <a class="btn btn-square btn-outline-light rounded-circle" href="#"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy; <a class="border-bottom" href="#">EcoFootprint Building Materials</a>, All Rights Reserved.
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            Built with passion by <a class="border-bottom" href="#">Amani Barhoumi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="js/char.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>