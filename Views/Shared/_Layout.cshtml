<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - building_materials</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

        <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Roboto:wght@500;700;900&display=swap" rel="stylesheet"> 

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
</head>
<body>
    <header>
            <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0 wow fadeIn" data-wow-delay="0.1s">
            <a href="/" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
                <h1 class="m-0 text-primary"><i class="far fa-solid fa-user-helmet-safety me-3"></i>Building Materials</h1>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a href="/" class="nav-item nav-link active">Home</a>
                    <a href="#about" class="nav-item nav-link">About</a>
                    <a href="#service" class="nav-item nav-link">Service</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                        <div class="dropdown-menu rounded-0 rounded-bottom m-0">
                            @Html.ActionLink("Transport Factors", "Index", "FacteurTransport", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Materials", "Index", "Materiau", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Material Families", "Index", "Famille", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Provenances", "Index", "Provenance", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Producers", "Index", "Producteur", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Transports", "Index", "Transport", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Environmental Characteristics", "Index", "CaracteristiqueEnvironnementale", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Material Types", "Index", "MaterialType", null, new { @class = "dropdown-item" })
                        </div>
                    </div>

                    <a href="contact.html" class="nav-item nav-link">Contact</a>
                </div>
            </div>
        </nav>
        <!-- Navbar End -->

    </header>
    <div class="container" style="min-height:100vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-light footer mt-5 pt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-light mb-4">Get In Touch</h5>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Cité El Khadhra, Tunis, Tunisia</p>
                        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+216 99 319 097</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>amani.barhoumi@etudiant-enit.utm.tn</p>
                        
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-light mb-4">Our Products</h5>
                        <a class="btn btn-link" href="#">Cement & Concrete</a>
                        <a class="btn btn-link" href="#">Steel & Iron</a>
                        <a class="btn btn-link" href="#">Bricks & Blocks</a>
                        <a class="btn btn-link" href="#">Wood & Timber</a>
                        <a class="btn btn-link" href="#">Tools & Equipment</a>
                    </div>
                    
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy; <a class="border-bottom" href="#">BuildMaterials</a>, All Rights Reserved.
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            Built with passion by <a class="border-bottom" href="#">Amani Barhoumi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer End -->

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>