@model building_materials.Models.FacteurTransport
@{
    ViewData["Title"] = "Transport Factor Details";
}

<div class="container-xxl py-5">
    <div class="container">
        <!-- Page Header -->
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <p class="d-inline-block border rounded-pill py-1 px-4">Details</p>
            <h1>Transport Factor Details</h1>
            <p class="mb-4">Detailed information about this transport type.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-3 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="card-header bg-light border-0 py-3">
                        <h4 class="mb-0">
                            <i class="fa fa-info-circle text-primary me-2"></i>
                            @Html.DisplayFor(model => model.Nom)
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="row mb-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <div class="detail-card bg-light rounded p-4 h-100">
                                    <h5 class="text-primary mb-3">Transport Name</h5>
                                    <p class="fs-5 mb-0">@Html.DisplayFor(model => model.Nom)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-card bg-light rounded p-4 h-100">
                                    <h5 class="text-primary mb-3">CO₂ Emission Factor</h5>
                                    <p class="fs-5 mb-0">
                                        <span class="badge bg-primary rounded-pill px-3 py-2">
                                            @Html.DisplayFor(model => model.FacteurCO2) kgCO₂e/km
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fa fa-arrow-left me-2"></i>Back to List
                            </a>
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model?.IdMoyenTransport" class="btn btn-primary rounded-pill px-4">
                                    <i class="fa fa-edit me-2"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model?.IdMoyenTransport" class="btn btn-outline-danger rounded-pill px-4 ms-2">
                                    <i class="fa fa-trash me-2"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-card {
        transition: all 0.3s ease;
        border-left: 4px solid var(--bs-primary);
    }

    .detail-card:hover {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.1);
        transform: translateY(-3px);
    }
</style>