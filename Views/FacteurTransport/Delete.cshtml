@model building_materials.Models.FacteurTransport
@{
    ViewData["Title"] = "Delete Transport Factor";
}

<div class="container-xxl py-5">
    <div class="container">
        <!-- Page Header -->
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <p class="d-inline-block border rounded-pill py-1 px-4 text-danger">Delete</p>
            <h1>Delete Transport Factor</h1>
            <p class="mb-4">Are you sure you want to delete this transport factor?</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-3 wow fadeInUp border-danger border-start border-5" data-wow-delay="0.2s">
                    <div class="card-header bg-danger bg-opacity-10 border-0 py-3">
                        <h4 class="mb-0 text-danger">
                            <i class="fa fa-exclamation-triangle me-2"></i>
                            Confirm Deletion
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="alert alert-warning">
                            <i class="fa fa-exclamation-circle me-2"></i>
                            This action cannot be undone. Please confirm that you want to permanently delete this transport factor.
                        </div>

                        <div class="row mb-4 mt-4">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <div class="detail-card bg-light rounded p-4 h-100">
                                    <h5 class="text-primary mb-3">Transport Name</h5>
                                    <p class="fs-5 mb-0">@Html.DisplayFor(model => model.Nom)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-card bg-light rounded p-4 h-100">
                                    <h5 class="text-primary mb-3">CO₂ Emission Factor</h5>
                                    <p class="fs-5 mb-0">
                                        <span class="badge bg-primary rounded-pill px-3 py-2">
                                            @Html.DisplayFor(model => model.FacteurCO2) kgCO₂e/km
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <form asp-action="Delete" class="mt-4">
                            <input type="hidden" asp-for="IdMoyenTransport" />
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                    <i class="fa fa-arrow-left me-2"></i>Back to List
                                </a>
                                <button type="submit" class="btn btn-danger rounded-pill px-4">
                                    <i class="fa fa-trash me-2"></i>Delete Permanently
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-card {
        transition: all 0.3s ease;
        border-left: 4px solid var(--bs-primary);
    }
</style>