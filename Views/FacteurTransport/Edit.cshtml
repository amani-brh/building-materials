@model building_materials.Models.FacteurTransport
@{
    ViewData["Title"] = "Edit Transport Factor";
}

<div class="container-xxl py-5">
    <div class="container">
        <!-- Page Header -->
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <p class="d-inline-block border rounded-pill py-1 px-4">Edit</p>
            <h1>Edit Transport Factor</h1>
            <p class="mb-4">Update the transport type and its CO₂ emission factor.</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-3 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="card-header bg-light border-0 py-3">
                        <h4 class="mb-0"><i class="fa fa-edit text-primary me-2"></i>Edit Transport Details</h4>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <input type="hidden" asp-for="IdMoyenTransport" />

                            <div class="mb-4">
                                <label asp-for="Nom" class="form-label">Transport Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa fa-tag text-primary"></i></span>
                                    <input asp-for="Nom" class="form-control" />
                                </div>
                                <span asp-validation-for="Nom" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="FacteurCO2" class="form-label">CO₂ Emission Factor</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fa fa-cloud text-primary"></i></span>
                                    <input asp-for="FacteurCO2" class="form-control" type="number" step="0.01" />
                                    <span class="input-group-text bg-light">kgCO₂e/km</span>
                                </div>
                                <span asp-validation-for="FacteurCO2" class="text-danger small"></span>
                                <div class="form-text">CO₂ emissions factor per kilometer for this transport type.</div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                    <i class="fa fa-arrow-left me-2"></i>Back to List
                                </a>
                                <button type="submit" class="btn btn-primary rounded-pill px-4">
                                    <i class="fa fa-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}