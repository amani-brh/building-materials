@model building_materials.Models.Producteur
@{
    ViewData["Title"] = "Producer Details";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Producers</a></li>
            <li class="breadcrumb-item active">@Model.Nom Details</li>
        </ol>
    </nav>

    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle me-2"></i>Producer Details</h4>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary">
                                <i class="bi bi-building me-2"></i>Company Information
                            </h5>
                            <dl class="row mt-3">
                                <dt class="col-sm-4 text-muted">
                                    @Html.DisplayNameFor(model => model.Nom)
                                </dt>
                                <dd class="col-sm-8 fw-bold">
                                    @Html.DisplayFor(model => model.Nom)
                                </dd>

                                <dt class="col-sm-4 text-muted">
                                    @Html.DisplayNameFor(model => model.LieuProduction)
                                </dt>
                                <dd class="col-sm-8">
                                    <i class="bi bi-geo-alt me-1 text-danger"></i>
                                    @Html.DisplayFor(model => model.LieuProduction)
                                </dd>

                                <dt class="col-sm-4 text-muted">
                                    Producer ID
                                </dt>
                                <dd class="col-sm-8 text-muted">
                                    <code>@Model.IdProducteur</code>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary">
                                <i class="bi bi-tools me-2"></i>Actions
                            </h5>
                            <div class="d-grid gap-3 mt-3">
                                <a asp-action="Edit" asp-route-id="@Model?.IdProducteur" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-2"></i>Edit Producer Information
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model?.IdProducteur" class="btn btn-outline-danger">
                                    <i class="bi bi-trash me-2"></i>Delete This Producer
                                </a>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Back to Producer List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
