@model building_materials.Models.Producteur
@{
    ViewData["Title"] = "Delete Producer";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Producers</a></li>
            <li class="breadcrumb-item active">Delete @Model.Nom</li>
        </ol>
    </nav>

    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Delete Producer</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this producer?
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title text-danger">Producer to be deleted:</h5>
                    <dl class="row mt-3">
                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.Nom)
                        </dt>
                        <dd class="col-sm-9 fw-bold">
                            @Html.DisplayFor(model => model.Nom)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            @Html.DisplayNameFor(model => model.LieuProduction)
                        </dt>
                        <dd class="col-sm-9">
                            <i class="bi bi-geo-alt me-1 text-danger"></i>
                            @Html.DisplayFor(model => model.LieuProduction)
                        </dd>

                        <dt class="col-sm-3 text-muted">
                            Producer ID
                        </dt>
                        <dd class="col-sm-9 text-muted">
                            <code>@Model.IdProducteur</code>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="IdProducteur" />
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>