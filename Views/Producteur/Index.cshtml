<!-- Index View -->
@model IEnumerable<building_materials.Models.Producteur>
@{
    ViewData["Title"] = "Producers";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Our Producers</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Add New Producer
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model?.Any() != true)
            {
                <div class="text-center py-5">
                    <i class="bi bi-building text-muted" style="font-size: 3rem;"></i>
                    <p class="mt-3">No producers found. Add your first producer to get started.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <i class="bi bi-building me-1"></i>
                                    @Html.DisplayNameFor(model => model.Nom)
                                </th>
                                <th>
                                    <i class="bi bi-geo-alt me-1"></i>
                                    @Html.DisplayNameFor(model => model.LieuProduction)
                                </th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle fw-medium">
                                        @Html.DisplayFor(modelItem => item.Nom)
                                    </td>
                                    <td class="align-middle">
                                        @Html.DisplayFor(modelItem => item.LieuProduction)
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.IdProducteur" class="btn btn-sm btn-outline-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.IdProducteur" class="btn btn-sm btn-outline-info" title="Details">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdProducteur" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>