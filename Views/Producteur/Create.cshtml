@model building_materials.Models.Producteur
@{
    ViewData["Title"] = "Add Producer";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Producers</a></li>
            <li class="breadcrumb-item active">Add New</li>
        </ol>
    </nav>

    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-building me-2"></i>Add New Producer</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-4">
                    <label asp-for="Nom" class="form-label fw-medium">Producer Name</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-building"></i></span>
                        <input asp-for="Nom" class="form-control" placeholder="Enter the producer's company name" required />
                    </div>
                    <span asp-validation-for="Nom" class="text-danger small"></span>
                    <div class="form-text">Official registered company name of the material producer</div>
                </div>

                <div class="mb-4">
                    <label asp-for="LieuProduction" class="form-label fw-medium">Production Location</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                        <input asp-for="LieuProduction" class="form-control" placeholder="City, Country or full address" required />
                    </div>
                    <span asp-validation-for="LieuProduction" class="text-danger small"></span>
                    <div class="form-text">Where the building materials are manufactured</div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-2"></i>Create Producer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
