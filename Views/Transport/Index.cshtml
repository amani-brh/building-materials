@model IEnumerable<building_materials.Models.Transport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DistanceKm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmissionCO2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Materiau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoyenTransport)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DistanceKm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmissionCO2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materiau.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoyenTransport.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTransport">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTransport">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTransport">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
