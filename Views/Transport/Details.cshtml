@model building_materials.Models.Transport

@{
    ViewData["Title"] = "Transport Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h2 class="mb-0">Transport Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Material Information</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Material Name</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Materiau.Nom)</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Transport Method</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-4">Method</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.MoyenTransport.Nom)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Distance & Emissions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="bi bi-map"></i> @Html.DisplayNameFor(model => model.DistanceKm)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.DistanceKm) kilometers
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    <i class="bi bi-cloud"></i> @Html.DisplayNameFor(model => model.EmissionCO2)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.EmissionCO2) kg CO<sub>2</sub>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Environmental Impact Analysis</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        This transport operation represents approximately
                        <span class="text-primary fw-bold">@Html.DisplayFor(model => model.EmissionCO2)</span> kg of CO<sub>2</sub>
                        emissions for transporting <span class="fw-bold">@Html.DisplayFor(model => model.Materiau.Nom)</span>
                        using <span class="fw-bold">@Html.DisplayFor(model => model.MoyenTransport.Nom)</span>
                        over a distance of <span class="text-primary fw-bold">@Html.DisplayFor(model => model.DistanceKm)</span> kilometers.
                    </p>

                    @if (Model.EmissionCO2 > 0 && Model.DistanceKm > 0)
                    {
                        <p>
                            Emission rate: <span class="badge bg-info">@(Math.Round(Model.EmissionCO2 / Model.DistanceKm, 2)) kg CO<sub>2</sub>/km</span>
                        </p>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.IdTransport" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model?.IdTransport" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

