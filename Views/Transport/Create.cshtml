@model building_materials.Models.Transport

@{
    ViewData["Title"] = "Add New Transport";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Add New Transport</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="IdMateriau" class="control-label">Building Material</label>
                            <select asp-for="IdMateriau" class="form-control form-select" asp-items="ViewBag.IdMateriau">
                                <option value="">-- Select Material --</option>
                            </select>
                            <small class="form-text text-muted">Select the material being transported.</small>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IdMoyenTransport" class="control-label">Transport Method</label>
                            <select asp-for="IdMoyenTransport" class="form-control form-select" asp-items="ViewBag.IdMoyenTransport">
                                <option value="">-- Select Transport Method --</option>
                            </select>
                            <small class="form-text text-muted">Select the method used to transport this material.</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="DistanceKm" class="control-label">Distance (km)</label>
                            <div class="input-group">
                                <input asp-for="DistanceKm" class="form-control" placeholder="0.00" />
                                <span class="input-group-text">km</span>
                            </div>
                            <small class="form-text text-muted">Enter the total transportation distance in kilometers.</small>
                            <span asp-validation-for="DistanceKm" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="EmissionCO2" class="control-label">CO<sub>2</sub> Emissions (kg)</label>
                            <div class="input-group">
                                <input asp-for="EmissionCO2" class="form-control" placeholder="0.00" />
                                <span class="input-group-text">kg</span>
                            </div>
                            <small class="form-text text-muted">Enter the carbon dioxide emissions generated by this transport.</small>
                            <span asp-validation-for="EmissionCO2" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Create Record
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

