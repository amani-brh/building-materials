@model building_materials.Models.Transport

@{
    ViewData["Title"] = "Delete Transport";
}

<div class="container mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Transport Record</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this transport record? This action cannot be undone.
            </div>

            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Record Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Material</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Materiau.Nom)</dd>

                        <dt class="col-sm-3">Transport Method</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.MoyenTransport.Nom)</dd>

                        <dt class="col-sm-3">Distance</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DistanceKm) km</dd>

                        <dt class="col-sm-3">CO<sub>2</sub> Emissions</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.EmissionCO2) kg</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdTransport" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add this to _Layout.cshtml or in a section that gets included on all pages -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">